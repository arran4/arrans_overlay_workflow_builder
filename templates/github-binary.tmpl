# Generated using: https://github.com/arran4/arrans_overlay_workflow_builder [[.Type]] [[.ConfigFile]] [[.Now]]

name: [[ .WorkflowName ]]

permissions:
  contents: write

on:
  schedule:
    - cron: '[[ .Cron ]]'
  workflow_dispatch:
  push:
    paths:
      - '.github/workflows/[[ .WorkflowFileName ]]'

concurrency:
  group: ci-${{ github.ref }}
  cancel-in-progress: false

env:
  ecn: [[ .Category ]]
  epn: [[ .PackageName ]]
  description: [[ .Description | quoteStr ]]
  homepage: [[ .Homepage  | quoteStr ]]
  github_owner: [[ .GithubOwner ]]
  github_repo: [[ .GithubRepo ]]
  keywords: [[ .MaskedKeywords ]]
  workflow_filename: [[ .WorkflowFileName ]]
  [[- range $pname, $prog := .Programs ]]
  [[- if $prog.HasDesktopFile ]]
  [[ join (filterEmpty $pname "desktop_file" ) "_" ]]: '[[ $prog.DesktopFile ]]'
  [[- end ]]
  [[ join (filterEmpty $pname "binary_installed_name" ) "_" ]]: '[[ $prog.InstalledFilename ]]'
  [[- range $keyword, $binary := $prog.Binary ]]
  [[- if gt (len $binary) 2 ]]
  [[ join (filterEmpty $pname "binary_archived_name" $keyword) "_" ]]: '[[ index $binary 1 ]]'
  [[- end ]]
  [[ join (filterEmpty $pname "release_name" $keyword) "_" ]]: '[[ index $binary 0 | ebuildvardoublequoted ]]'
  [[- end ]]
  [[- end ]]

jobs:
  check-and-create-ebuild:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Git
        run: |
          git config --global user.name 'github-actions[bot]'
          git config --global user.email 'github-actions[bot]@users.noreply.github.com'

      - name: Install required tools
        run: |
            sudo apt-get update
            sudo apt-get install -y wget jq coreutils
            url="$(curl -s --header "Accept: application/vnd.github+json" --header "Authorization: Bearer ${{secrets.GITHUB_TOKEN}}" https://api.github.com/repos/arran4/g2/releases/latest | jq -r '.assets[].browser_download_url | select(endswith("_linux_amd64.deb"))')"
            echo "$url"
            wget "${url}" -O /tmp/g2.deb
            sudo dpkg -i /tmp/g2.deb
            rm /tmp/g2.deb

      - name: Process each release
        id: process_releases
        run: |
          ebuild_dir="./${{ env.ecn }}/${{ env.epn }}"
          mkdir -p $ebuild_dir
          declare -A releaseTypes=()
          tags=$(curl -s  --header "Accept: application/vnd.github+json" --header "Authorization: Bearer ${{secrets.GITHUB_TOKEN}}" https://api.github.com/repos/${{ env.github_owner }}/${{ env.github_repo }}/releases | jq -r '.[].tag_name')
[[- if .WorkaroundSemanticVersionWithoutV ]]
          for tag in $tags; do
            version="${tag}"
[[- else ]]
          for tag in $tags; do
            version="${tag#[[- .WorkaroundTagPrefix ]]v}"
            if [ "${version}" = "${tag}" ]; then
                echo "$version == $tag so there is no [[- .WorkaroundTagPrefix ]] v removed skipping"
                continue
            fi
[[- end ]]
            originalVersion="${version}"
[[- if .WorkaroundSemanticVersionPrereleaseHack1 ]]
            version="$(echo "${version}" | sed 's/^\([0-9]\+\(\.[0-9]\+\)*\)\(-r[0-9]*\)\?\([-_]\(alpha\|beta\|rc\|p\)[0-9]*\)$/\1_\5\3/')"
[[- end ]]
            if ! echo "${version}" | egrep '^([0-9]+)\.([0-9]+)(\.([0-9]+))?(-r[0-9]+)?((_)(alpha|beta|rc|p)[0-9]*)*$'; then
                echo "tag / $version doesn't match regexp";
                continue;
            fi
            releaseType="$(echo "${version}" | sed -n 's/^[^_]\+_\(alpha\|beta\|rc\|p[0-9]*\).*$/\1/p')"
            if [[`[[ ! -v releaseTypes[${releaseType:=release}] ]]`]]; then
                releaseTypes[${releaseType:=release}]="$version"
            else
                echo "Already have a newier ${releaseType:=release} release: ${releaseTypes[${releaseType:=release}]}"
                continue
            fi
            ebuild_file="${ebuild_dir}/${{ env.epn }}-${version}.ebuild"
            if [ ! -f "$ebuild_file" ]; then

              {
                echo '# Generated via: https://github.com/arran4/arrans_overlay/blob/main/.github/workflows/${{ env.workflow_filename }}'
                echo 'EAPI=8'
                echo "DESCRIPTION=\"${{ env.description }}\""
                echo "HOMEPAGE=\"${{ env.homepage }}\""
                echo 'LICENSE="MIT"'
                echo 'SLOT="0"'
                echo 'KEYWORDS="${{ env.keywords }}"'
                echo 'IUSE="[[- `` -]]
                        [[- range $use, $archs := $.ReverseProgramsAsAlternatives]] [[$use]][[end]]
                        [[- if $.HasManualPages ]] man[[end]]
                        [[- if $.HasDocuments ]] doc[[end]]
                        [[- range $i, $shell := $.ShellCompletionShells]] [[$shell]][[end]]
                    [[- `` -]]"'
                echo 'REQUIRED_USE="[[- `` -]]
                    [[- range $use, $archs := $.ReverseProgramsAsAlternatives]][[$use]]? (|| ( [[range $i, $arch := $archs]][[$arch]] [[end]] )) [[end]]
                    [[- `` -]]"'
                echo 'DEPEND=""'
                echo 'RDEPEND="[[range $i, $dep := .MainDependencies]][[$dep]] [[end]]
[[- range $prog, $deps := .AlternativeDependencies]][[$prog]]? ( [[range $i, $dep := $deps]][[$dep]] [[end]] ) [[end -]]
                     "'
                echo 'S="${WORKDIR}"'
                echo ''
[[- if .HasDesktopFile ]]
                echo ''
[[- end ]]
                echo ''
                echo 'SRC_URI="'
[[- range $releaseFilename, $externalResource := .ExternalResources ]]
                echo "  [[range $i, $kw := .HaveKeywords]][[ $kw ]]? ( [[end]][[range $i, $kw := .MustntHaveKeywords]]![[ $kw ]]? ( [[end]] https://github.com/${{ env.github_owner }}/${{ env.github_repo }}/releases/download/${tag}/[[- if $.WorkaroundSemanticVersionPrereleaseHack1 ]][[ $releaseFilename | ebuildvardoublequotedSemanticVersionPrereleaseHack1 ]][[- else ]][[ $releaseFilename | ebuildvardoublequoted ]][[- end ]] -> \${P}-[[ $releaseFilename  | ebuildvardoublequoted ]] [[range $i, $kw := .HaveKeywords]] ) [[end]][[range $i, $kw := .MustntHaveKeywords]] ) [[ end ]] "
[[- end ]]
                echo '"'
                echo ''
                echo 'src_unpack() {'
[[- range $releaseFilename, $externalResource := .ExternalResources ]]
  [[- if $externalResource.Archived ]]
                echo '  if [[range $i, $kw := .HaveKeywords]]use [[ $kw ]][[end]][[if and (gt (len .MustntHaveKeywords) 0) (gt (len .HaveKeywords) 0) ]] && [[end]][[range $i, $kw := .MustntHaveKeywords]] && ! use [[ $kw ]] [[end]]; then'
                echo "    unpack \"\${DISTDIR}/\${P}-[[ $releaseFilename | ebuildvardoublequoted ]]\" || die \"Can't unpack archive file\""
                echo '  fi'
  [[- end ]]
[[- end ]]
                echo '}'
                echo ''
                echo 'src_install() {'
                echo '  exeinto /opt/bin'

[[- range $pname, $prog := .Programs ]]
  [[- range $keyword, $binary := $prog.Binary ]]
    [[- if gt (len $binary) 2 ]]
                echo '  if use [[ $keyword ]]; then'
                echo '    newexe "${{ env.[[ join (filterEmpty $pname "binary_archived_name" $keyword) "_" ]] }}" "${{ env.[[ join (filterEmpty $pname "binary_installed_name" ) "_" ]] }}" || die "Failed to install Binary"'
                echo '  fi'
    [[- else ]]
                echo '  if use [[ $keyword ]]; then'
                echo '    newexe "${DISTDIR}/${P}-${{ env.[[ join (filterEmpty $pname "release_name" $keyword) "_" ]] }}" "${{ env.[[ join (filterEmpty $pname "binary_installed_name" ) "_" ]] }}" || die "Failed to install Binary"'
                echo '  fi'
    [[- end ]]
  [[- end ]]
[[- end ]]


[[- if $.HasShellCompletion "bash" ]]
                echo '  if use bash; then'
                echo '    insinto /usr/share/bash-completion/completions
    [[- range $i, $file := $.ShellCompletion "bash" ]]
        [[- if ne $file.Keyword "" ]]
                echo '    if use [[ $file.Keyword ]]; then'
                echo '      newins "[[ $file.SourceFilepath ]]" "[[ $file.DestinationFilename ]]" || die "Failed to bash completion file"'
                echo '    fi'
        [[- else ]]
                echo '    newins "[[ $file.SourceFilepath ]]" "[[ $file.DestinationFilename ]]" || die "Failed to bash completion file"'
        [[- end ]]
    [[- end ]]
                echo '  fi'
[[- end ]]
[[- if $.HasShellCompletion "fish" ]]
                echo '  if use fish; then'
                echo '    insinto /usr/share/fish/vendor_completions.d
    [[- range $i, $file := $.ShellCompletion "fish" ]]
        [[- if ne $file.Keyword "" ]]
                echo '    if use [[ $file.Keyword ]]; then'
                echo '      newins "[[ $file.SourceFilepath ]]" "[[ $file.DestinationFilename ]]" || die "Failed to fish completion file"'
                echo '    fi'
        [[- else ]]
                echo '    newins "[[ $file.SourceFilepath ]]" "[[ $file.DestinationFilename ]]" || die "Failed to fish completion file"'
        [[- end ]]
    [[- end ]]
                echo '  fi'
[[- end ]]
[[- if $.HasShellCompletion "zsh" ]]
                echo '  if use zsh; then'
                echo '    insinto /usr/share/zsh/site-functions
    [[- range $i, $file := $.ShellCompletion "zsh" ]]
        [[- if ne $file.Keyword "" ]]
                echo '    if use [[ $file.Keyword ]]; then'
                echo '      newins "[[ $file.SourceFilepath ]]" "[[ $file.DestinationFilename ]]" || die "Failed to zsh completion file"'
                echo '    fi'
        [[- else ]]
                echo '    newins "[[ $file.SourceFilepath ]]" "[[ $file.DestinationFilename ]]" || die "Failed to zsh completion file"'
        [[- end ]]
    [[- end ]]
                echo '  fi'
[[- end ]]
[[- if $.HasShellCompletion "powershell" ]]
                echo '  if use powershell; then'
                echo '    insinto /usr/share/powershell/Modules
    [[- range $i, $file := $.ShellCompletion "powershell" ]]
        [[- if ne $file.Keyword "" ]]
                echo '    if use [[ $file.Keyword ]]; then'
                echo '      newins "[[ $file.SourceFilepath ]]" "[[ $file.DestinationFilename ]]" || die "Failed to powershell completion file"'
                echo '    fi'
        [[- else ]]
                echo '    newins "[[ $file.SourceFilepath ]]" "[[ $file.DestinationFilename ]]" || die "Failed to powershell completion file"'
        [[- end ]]
    [[- end ]]
                echo '  fi'
[[- end ]]
[[- if $.HasManualPages ]]
                echo '  if use man; then'
    [[- range $i, $man := $.ManualPages ]]
        [[- if ne $man.Keyword "" ]]
                echo '    if use [[ $man.Keyword ]]; then'
                echo '      newman "[[ $man.SourceFilepath ]]" "[[ $man.DestinationFilename ]]" || die "Failed to install manual page [[ $man.DestinationFilename ]]"'
                echo '    fi'
        [[- else ]]
                echo '    newman "[[ $man.SourceFilepath ]]" "[[ $man.DestinationFilename ]]" || die "Failed to install manual page [[ $man.DestinationFilename ]]"'
        [[- end ]]
    [[- end ]]
                echo '  fi'
[[- end ]]
[[- if $.HasDocuments ]]
                echo '  if use doc; then'
    [[- range $i, $docs := $.Documents ]]
        [[- if ne $docs.Keyword "" ]]
                echo '    if use [[ $docs.Keyword ]]; then'
            [[- range $ii, $doc := $docs.Grouped ]]
                echo '      newdoc "[[ $doc.SourceFilepath ]]" "[[ $doc.DestinationFilename ]]" || die "Failed to install document [[ $doc.DestinationFilename ]]"'
            [[- end ]]
                echo '    fi'
        [[- else ]]
            [[- range $ii, $doc := $docs.Grouped ]]
                echo '    newdoc "[[ $doc.SourceFilepath ]]" "[[ $doc.DestinationFilename ]]" || die "Failed to install document [[ $doc.DestinationFilename ]]"'
            [[- end ]]
        [[- end ]]
    [[- end ]]
                echo '  fi'
[[- end ]]
                echo '}'
                echo ""
              } > $ebuild_file

              # Manifest generation
[[ range $releaseFilename, $externalResource := .ExternalResources ]]
    [[- if $.WorkaroundSemanticVersionPrereleaseHack1 ]]
              g2 manifest upsert-from-url "https://github.com/${{ env.github_owner }}/${{ env.github_repo }}/releases/download/${tag}/[[ $releaseFilename | ebuildvardoublequotedSemanticVersionPrereleaseHack1 ]]" "${{ env.epn }}-${version}-[[ $releaseFilename | actionvardoublequoted ]]" "${ebuild_dir}/Manifest"
    [[- else ]]
              g2 manifest upsert-from-url "https://github.com/${{ env.github_owner }}/${{ env.github_repo }}/releases/download/${tag}/[[ $releaseFilename | actionvardoublequoted ]]" "${{ env.epn }}-${version}-[[ $releaseFilename | actionvardoublequoted ]]" "${ebuild_dir}/Manifest"
    [[- end ]]

[[- end ]]
              echo "generated_tag=${tag}" >> $GITHUB_OUTPUT
            fi
          done

      - name: Commit and push changes
        run: |
          ebuild_dir="./${{ env.ecn }}/${{ env.epn }}"
          git add ./${ebuild_dir}
          git commit -m "Add ebuilds for new ${{ env.epn }} releases" &&
          git pull --rebase &&
          git push || true
        if: steps.process_releases.outputs.generated_tag
